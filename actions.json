{
  "openapi": "3.0.0",
  "info": {
    "title": "Email Assistant API",
    "version": "1.0.0"
  },
  "paths": {
    "/emails": {
      "get": {
        "operationId": "getRecentEmails",
        "parameters": [
          {
            "name": "days",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 3
            }
          }
        ]
      }
    },
    "/email/{uid}/reply": {
      "post": {
        "operationId": "replyToEmail",
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reply_text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/email/{uid}/star": {
      "post": {
        "operationId": "starEmail"
      }
    },
    "/email/{uid}": {
      "delete": {
        "operationId": "deleteEmail"
      }
    }
  }
}